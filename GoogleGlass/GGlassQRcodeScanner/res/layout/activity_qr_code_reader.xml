<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/QR_CODE_SCANNER_FL_CAMERA_PREVIEW"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/QR_CODE_SCANNER_TEXTVIEW_CONTAINER" >
    </FrameLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:src="@drawable/cross_bar_camera_surface" />

    <LinearLayout
        android:id="@+id/QR_CODE_SCANNER_TEXTVIEW_CONTAINER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/QR_CODE_SCANNER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>